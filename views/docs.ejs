}

// Revised function: Accepts FULL URL (manual) instead of relative path + base url
async function testGetEndpoint(endpointId, urlInput, defaultParams = {}) {
    const btn = document.getElementById(`btn-${endpointId}`);
    const headerDiv = document.getElementById('result-header-' + endpointId);
    const contentDiv = document.getElementById('result-content-' + endpointId);
    
    // ANTI-SPAM: Disable tombol
    if(btn) btn.disabled = true;

    headerDiv.classList.remove("hidden");
    contentDiv.classList.add("hidden"); 
    headerDiv.innerHTML = '<span class="text-blue-400 animate-pulse"><i class="fa-solid fa-spinner fa-spin mr-2"></i>Memuat...</span>';
    
    const startTime = performance.now(); 
    
    // Use the input URL directly (which is now hardcoded in the HTML)
    let fullUrl = urlInput;
    const queryParams = [];

    for (const [key, defaultValue] of Object.entries(defaultParams)) {
        if (fullUrl.includes(`:${key}`)) {
            // Replace path parameters directly in the Full URL
            fullUrl = fullUrl.replace(`:${key}`, defaultValue);
        } else if (defaultValue !== '') {
            queryParams.push(`${key}=${encodeURIComponent(defaultValue)}`);
        }
    }
    
    queryParams.push(`lang=${currentLang}`);
    
    // Check if URL already has query params
    const separator = fullUrl.includes('?') ? '&' : '?';
    if (queryParams.length > 0) fullUrl += separator + queryParams.join('&');
    
    try {
        const response = await fetch(fullUrl);
        const data = await response.json();
        const endTime = performance.now(); 
        if (!response.ok) throw new Error(`Status ${response.status}`);
        displayResult(endpointId, data, null, endTime - startTime); 
    } catch (error) {
        displayResult(endpointId, null, error.message, performance.now() - startTime);
    } finally {
        // Aktifkan kembali tombol
        if(btn) btn.disabled = false;
    }
}

